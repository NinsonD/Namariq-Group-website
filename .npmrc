# npm configuration for aPanel compatibility
# This file helps npm install work reliably on aPanel

# Allow installation of packages with unmet peer dependencies
# Useful when aPanel has npm 7+ with strict peer dependency checks
legacy-peer-deps=true

# Use HTTPS for registry communication (more secure)
registry=https://registry.npmjs.org/

# Increase timeout for slower connections
fetch-timeout=120000

# Set audit to false to skip security audit on install (can speed up installation)
audit=false

# Temporarily disable production mode to install dev dependencies for build
production=false
